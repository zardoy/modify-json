{
    "name": "modify-json-file",
    "version": "0.0.0-development",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "description": "Simple and modern way to modify JSON files",
    "repository": "https://github.com/zardoy/modify-json-file",
    "keywords": [
        "json",
        "jsonc",
        "files",
        "modify",
        "change",
        "update",
        "replace",
        "properties",
        "package.json",
        "tsconfig.json"
    ],
    "author": "Vitaly <vital2580@icloud.com>",
    "license": "MIT",
    "files": [
        "build"
    ],
    "scripts": {
        "prepublishOnly": "node node_modules/typescript/bin/tsc -p tsconfig.build.json && pnpm test",
        "test": "tsd && jest"
    },
    "tsd": {
        "extends": "@zardoy/tsconfig/node",
        "compilerOptions": {
            "baseUrl": ".",
            "paths": {
                "modify-json-file": [
                    "./build"
                ]
            }
        },
        "include": [
            "build",
            "test-d"
        ]
    },
    "engines": {
        "node": ">=12"
    },
    "devDependencies": {
        "@types/graceful-fs": "^4.1.5",
        "@types/jest": "^27.0.1",
        "@types/node": "^15.14.9",
        "@types/parse-json": "^4.0.0",
        "@zardoy/tsconfig": "^1.2.2",
        "@zardoy/xo-config": "^0.1.0",
        "jest": "^27.2.0",
        "load-json-file": "^6.2.0",
        "nanoid": "^3.1.25",
        "ts-jest": "^27.0.5",
        "tsd": "^0.17.0",
        "typescript": "^4.4.3",
        "xo": "^0.44.0"
    },
    "dependencies": {
        "detect-indent": "^6.1.0",
        "graceful-fs": "^4.2.8",
        "parse-json": "^5.2.0",
        "strip-bom": "^4.0.0",
        "strip-json-comments": "^3",
        "strip-json-trailing-commas": "^1.1.0",
        "type-fest": "^2.3.3"
    },
    "jest": {
        "preset": "ts-jest"
    }
}
